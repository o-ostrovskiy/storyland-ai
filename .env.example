# Google AI API Key (required)
GOOGLE_API_KEY=your-google-ai-api-key-here

# Database Configuration (optional)
# Set USE_DATABASE=true to enable persistent sessions with SQLite
USE_DATABASE=false
DATABASE_URL=sqlite:///storyland_sessions.db

# Memory Service (optional)
# Set USE_MEMORY=true to enable memory-based personalization
USE_MEMORY=false

# Session Configuration (optional)
# Maximum number of events to keep in session history
SESSION_MAX_EVENTS=20

# Context Management (optional)
# Maximum tokens for conversation context
MAX_CONTEXT_TOKENS=30000

# Model Configuration (optional)
# Model to use for agents (default: gemini-2.0-flash-lite)
MODEL_NAME=gemini-2.0-flash-lite

# Logging (optional)
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
